<% layout('./layout/boilerplate') -%>
    <h1>My Cart</h1>
    <div>
        <form action="" method="post" class="d-inline">
            <button class="btn btn-sm btn-success">CheckOut</button>
         </form>
    </div>
    <% for( let cartItem of cartItems ) { %>
        <h1 style="margin-left: 85px;margin-top:20px">
            <%= cartItem.name %>
        </h1>
        <div class="card mx-auto mb-3" style="width: 23rem;margin-top:30px">
            <img src="<%=cartItem.img%>" class="card-img-top" alt="<%=cartItem.name%> ">
            <div class="card-body">
                <h5 class="card-title">
                    <%=cartItem.name%>
                </h5>
                <p class="card-text">
                    <%=cartItem.desc%>
                </p>
                <h5 class="card-title">
                    <%=cartItem.price%>
                </h5>
                <h4 class="card-title">
                    <%=cartItem.name%>
                </h4>
            </div>
        </div>
        </div>
        <% } %>
        